<configuration>

  <include resource="org/springframework/boot/logging/logback/defaults.xml" />
  <include resource="org/springframework/boot/logging/logback/console-appender.xml" />

  <logger name="org.helloworld.kafka" level="DEBUG" />
  <logger name="org.apache.kafka.clients.consumer" level="DEBUG" />

  <logger name="org.springframework.boot.autoconfigure.logging.AutoConfigurationReportLoggingInitializer" level="DEBUG" />

  <root level="INFO">
    <appender-ref ref="CONSOLE" />
  </root>

</configuration>